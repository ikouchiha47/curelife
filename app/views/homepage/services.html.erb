<div class="container mx-auto py-8 px-10">
  <h3 class="text-2xl pb-10">Doctors</h3>
  <div class="flow-root">
    <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700">
      <% @doctors.each do |doctor| %>
        <li class="py-3 sm:py-4">
          <div class="flex items-center space-x-4">
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-gray-900 truncate dark:text-white">
              <%= doctor.full_name %>
              </p>
              <p class="text-sm text-gray-500 truncate dark:text-gray-400">
              <%= doctor.specialities.map(&:name).join(", ") %>
              </p>
            </div>
            <div class="inline-flex items-center text-base font-semibold text-white dark:text-white">
              <%= link_to "Book", patients_login_url, class: "inline-block px-8 py-2 bg-blue-600" %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
